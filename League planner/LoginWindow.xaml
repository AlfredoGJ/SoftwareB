<Window x:Class="League_planner.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:League_planner"
        mc:Ignorable="d"
        MouseDown="Grid_MouseDown"
        Title="LoginWindow" Height="500" Width="350" WindowStyle="None">

    <DockPanel  >

        <StackPanel DockPanel.Dock="Top" Height="80">

        </StackPanel>
        <StackPanel Margin="30,0,30,30" DockPanel.Dock="Bottom">



            <Label FontSize="24">Usuario</Label>
            <TextBox Height="40" x:Name="usuario" FontSize="20"  Padding="5">

            </TextBox>

            <Label FontSize="24">Contraseña</Label>
            <PasswordBox Height="40" x:Name="contraseña" FontSize="20"  Padding="5">

            </PasswordBox>

            <Button Height="40" Margin="0,40,0,0"  FontSize="20" Background="AliceBlue" Click="LogIn" >
                Log In
            </Button>



        </StackPanel>

    </DockPanel>
</Window>
