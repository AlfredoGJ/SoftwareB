<Page x:Class="League_planner.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:League_planner"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Login" Foreground="{x:Null}">

    <DockPanel  >

        <StackPanel DockPanel.Dock="Top" Height="100" MouseDown="Grid_MouseDown">
            
        </StackPanel>
        <StackPanel Margin="400,100,400,200" DockPanel.Dock="Bottom">



            <Label FontSize="24">Usuario</Label>
            <TextBox Height="40" x:Name="usuario" FontSize="20"  Padding="5">

            </TextBox>

            <Label FontSize="24">Contraseña</Label>
            <PasswordBox Height="40" x:Name="contraseña" FontSize="20"  Padding="5">
                
            </PasswordBox>
            
            <Button Height="40" Margin="0,40,0,0"  FontSize="20" Background="AliceBlue" Click="LogIn" >
                Log In
            </Button>
            
            

        </StackPanel>

    </DockPanel>
</Page>
